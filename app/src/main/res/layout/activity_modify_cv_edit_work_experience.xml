<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ModifyCV.ModifyCVEditWorkExperience.ModifyCVEditWorkExperienceActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewModifyCVEditWorkExperience"
        android:layout_width="347dp"
        android:layout_height="504dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnModifyCVEditWorkExperienceAddNew" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="362dp"
        android:layout_height="79dp"
        android:layout_marginTop="64dp"
        android:text="Edit Your Work Experience"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="202dp"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:text="Click on any item to change it"
        app:layout_constraintStart_toStartOf="@+id/recyclerViewModifyCVEditWorkExperience"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/btnModifyCVEditWorkExperienceAddNew"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="ADD NEW"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/backbuttonModifyCVEditWorkExperience"
        android:layout_width="112dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:text="BACK"
        app:icon="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toTopOf="@+id/textView18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>