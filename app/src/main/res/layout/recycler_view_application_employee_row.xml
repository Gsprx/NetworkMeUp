<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="374dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView624"
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="12dp"
                android:text="Status:"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textEmployeeApplicationStatus"
                app:layout_constraintTop_toBottomOf="@+id/textEmployeeApplicationCoverLetter"
                app:layout_constraintVertical_bias="0.009" />

            <TextView
                android:id="@+id/textEmployeeApplicationJobTitle"
                android:layout_width="261dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:text="Job Title"
                app:layout_constraintEnd_toEndOf="@+id/textApplicationID"
                app:layout_constraintTop_toBottomOf="@+id/textView45" />

            <TextView
                android:id="@+id/textEmployeeApplicationCoverLetter"
                android:layout_width="383dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Coverage Letter"
                app:layout_constraintEnd_toEndOf="@+id/textEmployeeApplicationJobTitle"
                app:layout_constraintTop_toBottomOf="@+id/textView63" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="37dp"
                android:layout_height="26dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:text="ID: "
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/textApplicationID"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textApplicationID"
                android:layout_width="71dp"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:text="Applic ID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView45" />

            <TextView
                android:id="@+id/textEmployeeApplicationStatus"
                android:layout_width="114dp"
                android:layout_height="24dp"
                android:layout_marginTop="28dp"
                android:text="Applic Status"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView624"
                app:layout_constraintEnd_toEndOf="@+id/textEmployeeApplicationCoverLetter"
                app:layout_constraintTop_toBottomOf="@+id/textEmployeeApplicationCoverLetter" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="91dp"
                android:layout_height="17dp"
                android:layout_marginEnd="12dp"
                android:text="Job's Title:"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textEmployeeApplicationJobTitle"
                app:layout_constraintEnd_toStartOf="@+id/textEmployeeApplicationJobTitle"
                app:layout_constraintTop_toTopOf="@+id/textEmployeeApplicationJobTitle"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="107dp"
                android:layout_height="27dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="284dp"
                android:text="Cover Letter:"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textEmployeeApplicationJobTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView62" />

            <Button
                android:id="@+id/btnEmployeeApplicationViewJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="View Job"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/textEmployeeApplicationCoverLetter"
                app:layout_constraintEnd_toEndOf="@+id/textApplicationID"
                app:layout_constraintTop_toBottomOf="@+id/textEmployeeApplicationJobTitle"
                app:layout_constraintVertical_bias="0.328" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>