                android:layout_marginTop="12dp"
                android:text="Job Description:"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textViewApplicationCompanySector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewApplicationCompanySector" />

            <TextView
                android:id="@+id/textEmployeeApplicationJobDescription"
                android:layout_width="262dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="Job Description"
                app:layout_constraintBottom_toTopOf="@+id/textView63"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@+id/textView76"
                app:layout_constraintTop_toBottomOf="@+id/textViewEmployeeApplicationSectorFill"
