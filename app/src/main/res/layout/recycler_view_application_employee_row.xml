                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textViewApplicationEmployeeCompany"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewApplicationEmployeeCompany" />

            <TextView
                android:id="@+id/textViewEmployeeApplicationSectorFill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Company Sector"
                app:layout_constraintStart_toEndOf="@+id/textViewApplicationCompanySector"
                app:layout_constraintTop_toTopOf="@+id/textViewApplicationCompanySector" />

