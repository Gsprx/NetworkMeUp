<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ManageJobPositions.ChangeJobDetails.EditReqWorkExperience.AddNewReqWorkExperience.AddNewReqWorkExperienceActivity">

    <TextView
        android:id="@+id/textView54"
        android:layout_width="268dp"
        android:layout_height="36dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="184dp"
        android:text="Select Years At Work:"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="268dp"
        android:layout_height="36dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="56dp"
        android:text="Select Expertise Field:"
        android:textSize="28sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="360dp"
        android:layout_height="87dp"
        android:layout_marginTop="68dp"
        android:text="Add a Required Work Experience to your Job"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerAddNewReqWorkExperienceExpertiseField"
        android:layout_width="305dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toTopOf="@+id/textView54"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView52"
        app:layout_constraintVertical_bias="0.347" />

    <Spinner
        android:id="@+id/spinnerAddNewReqWorkExperienceYears"
        android:layout_width="293dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView54" />

    <EditText
        android:id="@+id/editTextAddNewReqWorkExpDescription"
        android:layout_width="358dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Derscription"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerAddNewReqWorkExperienceYears" />

    <Button
        android:id="@+id/buttonAddNewReqWorkExp"
        android:layout_width="244dp"
        android:layout_height="79dp"
        android:text="ADD WORK EXPERIENCE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddNewReqWorkExpDescription"
        app:layout_constraintVertical_bias="0.432" />

    <Button
        android:id="@+id/backbuttonAddNewReqWorkExp"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:text="BACK"
        app:icon="@android:drawable/ic_menu_revert"
        app:layout_constraintBottom_toTopOf="@+id/textView43"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>